<%- include('partials/header') %>

<div style="margin: 20px 0px; text-align: center;">
<a href="/addCenter"><button type="button" class="btn btn-success">Add New Center</button></a>
<a href="/adminLogout"><button type="button" class="btn btn-danger">Log Out</button></a>
</div>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">S. No.</th>
            <th scope="col">Center Name</th>
            <th scope="col">Location</th>
            <th scope="col">Opening Time</th>
            <th scope="col">Closing Time</th>
            <th scope="col">Booking Details</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        <!-- loop through all center data to show them -->
        <% if(center.length!=0){ var i=1; center.forEach(function(data){ %>
        <tr>
            <th scope="row"><%= i %></th>
            <td><%= data.name %></td>
            <td><%= data.location %></td>
            <td><%= data.openTime %></td>
            <td><%= data.closeTime %></td>
            <td><a href="/centerBookings/<%= data._id %>" class="btn btn-dark">View</a></td>
            <td><a href="/deleteCenter/<%= data._id %>" class="btn btn-danger">Delete</a></td>
        </tr>
        <% i++; })} %>
    </tbody>
</table>


<%- include('partials/footer') %>