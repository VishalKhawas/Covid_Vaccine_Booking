<%- include('partials/header') %>

    <div class="container mt-5">
        <h1>Login</h1>

        <div class="row">
            <div class="col-sm-8">
                <div class="card">
                    <div class="card-body">

                        <!-- Makes POST request to /login route -->
                        <form action="/book" method="POST">
                            <div class="form-group">
                                <label for="centerName">Center Name</label>
                                <input type="text" class="form-control" name="centerName" readonly value="<%= center.name %>">
                            </div>
                            <div class="form-group">
                                <label for="timing">Center Timing</label>
                                <input type="text" class="form-control" name="timing" readonly value="<%= center.openTime %> to <%= center.closeTime %>">
                            </div>
                            <div class="form-group">
                                <label for="name">Enter Your Name</label>
                                <input type="text" class="form-control" name="username" required>
                            </div>
                            <div class="form-group">
                                <label for="age">Enter Your Age</label>
                                <input type="text" class="form-control" name="age" required>
                            </div>
                            <div class="form-group">
                                <label for="date">Select Date of Vaccination</label>
                                <input type="date" class="form-control" name="date" required>
                            </div>
                            <button type="submit" class="btn btn-dark">Book Slot</button>
                        </form>

                    </div>
                </div>
            </div>

        </div>
    </div>

    <%- include('partials/footer') %>